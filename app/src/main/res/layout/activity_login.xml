<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/llRegistrationForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10dp"
                    android:text="@string/user_login"
                    android:textColor="@color/background_color_for_button"
                    android:textSize="@dimen/text_20sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llRegistrationForm"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:hint="User Name"
                    android:padding="@dimen/dimen_15dp"
                    android:textSize="@dimen/text_18sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llUserPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llUserName"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/etUserPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="@dimen/dimen_15dp"
                    android:textSize="@dimen/text_18sp" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rlBtnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llUserPassword"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dimen_30dp"
                    android:background="@drawable/button_shape"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginTop="@dimen/dimen_3dp"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:layout_marginBottom="@dimen/dimen_3dp"
    android:background="@drawable/background_for_user_list"
    android:elevation="@dimen/dimen_3dp"
    android:orientation="vertical"
    android:padding="@dimen/dimen_2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llForContactsListMainSip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_10dp"
                android:layout_height="wrap_content" />




            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Shohrin"
                        android:textColor="@color/background_color_for_button"
                        android:textSize="@dimen/text_17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">


                    <TextView
                        android:id="@+id/tvUserAge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="no label"
                        android:textSize="@dimen/text_15sp"
                        android:padding="@dimen/dimen_2dp"
                        android:layout_weight="1"
                       />


                    <TextView
                        android:id="@+id/tvUserCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:gravity="right"
                        android:text="no label"
                        android:layout_marginEnd="@dimen/dimen_20dp"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:textSize="@dimen/text_15sp"
                        android:padding="@dimen/dimen_2dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>